    <select id="getById" resultType="Role" parameterType="int">
        SELECT
        r.role_id,
        r.role_name,
        u.user_id,
        u.user_name,
        u.password,
        u.email
        from role r INNER JOIN user u on r.user_id=u.user_id
        WHERE  role_id=#{roleId}
    </select>

